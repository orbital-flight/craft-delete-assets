{% import '_includes/forms.twig' as forms %}

<h1>{{ "Accessibility"|t('delete-assets') }}</h1>

{{ forms.colorField({
    first: true,
    label: "Used assets color:"|t('delete-assets'),
    instructions: "The color used to represent the assets which are currently in use in your project:"|t('delete-assets'),
    name: "usedAssetsColor",
    value: settings.usedAssetsColor,
    errors: settings.getErrors('usedAssetsColor'),
    required: true,
}) }}

{{ forms.colorField({
